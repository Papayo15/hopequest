# Firebase Configuration
# Obtén estos valores de: https://console.firebase.google.com/
# Project Settings > General > Your apps > Firebase SDK snippet

FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id
FIREBASE_MEASUREMENT_ID=your_measurement_id

# Google Cloud TTS (opcional, para voces)
GOOGLE_CLOUD_TTS_API_KEY=your_google_tts_key_here

# AdMob IDs (para monetización)
ADMOB_APP_ID_ANDROID=ca-app-pub-xxxxx~xxxxx
ADMOB_APP_ID_IOS=ca-app-pub-xxxxx~xxxxx
ADMOB_BANNER_ID_ANDROID=ca-app-pub-xxxxx/xxxxx
ADMOB_BANNER_ID_IOS=ca-app-pub-xxxxx/xxxxx
ADMOB_INTERSTITIAL_ID_ANDROID=ca-app-pub-xxxxx/xxxxx
ADMOB_INTERSTITIAL_ID_IOS=ca-app-pub-xxxxx/xxxxx
ADMOB_REWARDED_ID_ANDROID=ca-app-pub-xxxxx/xxxxx
ADMOB_REWARDED_ID_IOS=ca-app-pub-xxxxx/xxxxx

# Entorno
NODE_ENV=development

# APIs Externas (opcionales)
UNSPLASH_ACCESS_KEY=your_unsplash_key_here
