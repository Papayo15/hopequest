{
  "expo": {
    "name": "Condominio360 Vigilancia",
    "slug": "condominio360-vigilancia",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1F2937"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.condominio360.vigilancia",
      "infoPlist": {
        "NSCameraUsageDescription": "La app necesita acceso a la cámara para escanear códigos QR",
        "NSPhotoLibraryUsageDescription": "La app necesita acceso a la galería"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1F2937"
      },
      "package": "com.condominio360.vigilancia",
      "permissions": [
        "android.permission.CAMERA"
      ]
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
